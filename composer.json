{
  "name": "vardumper/ibexa-experience-docker",
  "description": "Containerized Ibexa Experience",
  "type": "project",
  "authors": [
    {
      "name": "Erik PÃ¶hler",
      "email": "erik.poehler@fork.de"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "composer/installers": "^2.2"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "symfony/flex": true,
      "php-http/discovery": true,
      "symfony/runtime": true,
      "ibexa/post-install": true
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": true
    },
    "symfony-skeleton": {
      "config": {
        "preferred-install": "dist"
      }
    }
  },
  "scripts": {
    "install-ibexa": [
      "[ -d 'site' ] || COMPOSER_PROCESS_TIMEOUT=600 composer create-project --prefer-dist ibexa/experience-skeleton site",
      "[ -f 'site/docker-compose.yml' ] || rm site/docker-compose.yml",
      "[ -f 'site/docker-compose.override.yml' ] || rm site/docker-compose.override.yml"
    ],
    "post-install-cmd": [
      "@install-ibexa"
    ],
    "post-update-cmd": [
      "@install-ibexa"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://updates.ibexa.co"
    }
  ]
}
