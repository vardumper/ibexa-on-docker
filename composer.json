{
  "name": "vardumper/ibexa-on-docker",
  "description": "Ibexa on Docker",
  "type": "project",
  "authors": [
    {
      "name": "Erik PÃ¶hler",
      "email": "info@erikpoehler.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "symfony/flex": true,
      "php-http/discovery": true,
      "symfony/runtime": true,
      "ibexa/post-install": true
    }
  },
  "scripts": {
    "install-ibexa": [
      "COMPOSER_PROCESS_TIMEOUT=600 COMPOSER_POOL_OPTIMIZER=0 COMPOSER_MEMORY_LIMIT=-1 composer create-project --prefer-dist ibexa/oss-skeleton app",
      "@php -r \"file_exists('app/docker-compose.yml') || unlink('app/docker-compose.yml');\"",
      "@php -r \"file_exists('app/docker-compose.override.yml') || unlink('app/docker-compose.override.yml');\"",
      "@php -r \"copy('.env.dev', 'app/.env.dev');\"",
      "@php -r \"unlink('.env.dev');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"unlink('composer.lock');\""
    ],
    "post-create-project-cmd": [
      "@install-ibexa"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://updates.ibexa.co"
    },
    {
      "type": "package",
      "package": {
        "name": "vardumper/ibexa-on-docker",
        "version": "oss",
        "source": {
          "url": "https://github.com/vardumper/ibexa-on-docker",
          "type": "git",
          "reference": "origin/main"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vardumper/ibexa-on-docker",
        "version": "content",
        "source": {
          "url": "https://github.com/vardumper/ibexa-on-docker",
          "type": "git",
          "reference": "origin/content"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vardumper/ibexa-on-docker",
        "version": "commerce",
        "source": {
          "url": "https://github.com/vardumper/ibexa-on-docker",
          "type": "git",
          "reference": "origin/commerce"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "vardumper/ibexa-on-docker",
        "version": "experience",
        "source": {
          "url": "https://github.com/vardumper/ibexa-on-docker",
          "type": "git",
          "reference": "origin/experience"
        }
      }
    }
  ]
}
