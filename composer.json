{
  "name": "vardumper/ibexa-on-docker",
  "description": "Ibexa on Docker",
  "type": "project",
  "authors": [
    {
      "name": "Erik PÃ¶hler",
      "email": "erik.poehler@fork.de"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "symfony/flex": true,
      "php-http/discovery": true,
      "symfony/runtime": true,
      "ibexa/post-install": true
    }
  },
  "scripts": {
    "install-ibexa": [
      "COMPOSER_PROCESS_TIMEOUT=600 composer create-project --prefer-dist ibexa/oss-skeleton app",
      "@php -r \"file_exists('app/docker-compose.yml') || unlink('app/docker-compose.yml');\"",
      "@php -r \"file_exists('app/docker-compose.override.yml') || unlink('app/docker-compose.override.yml');\"",
      "@php -r \"file_exists('app/.env') || unlink('app/.env');\"",
      "@php -r \"file_exists('app/.env.dev') || unlink('app/.env.dev) && copy('.env.dist', 'app/.env.dev');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"unlink('composer.lock');\""
    ],
    "post-create-project-cmd": [
      "@install-ibexa"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://updates.ibexa.co"
    },
    {
      "type": "vcs",
      "url": "https://github.com/vardumper/ibexa-on-docker/"
    }
  ]
}
